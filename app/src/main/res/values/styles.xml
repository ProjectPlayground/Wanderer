<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">#1B5E20</item>
        <item name="colorAccent">#9E9E9E</item>
    </style>

    <!-- Banner-->
    <style name="Banner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">#2E7D32</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Fragment images-->
    <style name="FragmentImages">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>




    <!--Info ScrollView-->
    <style name="InfoScrollView">
        <item name="android:background">#C8E6C9</item>
    </style>

    <!-- Intro text -->
    <style name="Intro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- LinearLayout for Button clicked to show Hostel amenities-->
    <style name="ButtonContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Button for hostel amenities, Types of Room, Location-->
    <style name="HostelAdditionalInfoButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <!-- Text for hostel amenities, Types of Room, Location-->
    <style name="HostelAdditionalInfoText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:background">#C8E6C9</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--Map ImageView style-->
    <style name="Map">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:background">#C8E6C9</item>
        <item name="android:scaleType">center</item>
    </style>
    <!-- TableRow for Contact-->
    <style name="ContactTableRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">#81C784</item>
    </style>

    <!-- ImageView in the Contact-->
    <style name="ContactImage">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <!-- Clickable TextView in the Contact-->
    <style name="ContactText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>





    <!-- Style for BookNowActivity -->
    <style name="BookNowActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#C8E6C9</item>
    </style>

    <!-- Style for the Fields in the Book now form -->
    <style name="FormField">
        <item name="android:layout_width">192dp</item>
        <item name="android:background">#C8E6C9</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for the Fields filled by the user (Check-in date and Length of stay EditText) -->
    <style name="EditTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- Style for the separator between the input of the sum and the total Price -->
    <style name="Sum">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#616161</item>
    </style>

    <!-- Style for the displayed price-->
    <style name="PriceText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
    </style>


    <!-- Style for the + - Button-->
    <style name="PlusMinus">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <!-- Style for the Home Button-->
    <style name="HomeButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_gravity">right|bottom</item>
    </style>


    <!-- Style for the Book Now Button-->
    <style name="BookButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_gravity">right|bottom</item>
    </style>

</resources>
